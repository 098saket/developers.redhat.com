{% set access = 'training-content' %}
{% set cardImg = 'https://images.unsplash.com/photo-1500015139098-84b51c349a60?ixlib=rb-0.3.5&s=6d04d38ac0d81eb2414819cdea385912&auto=format&fit=crop&w=1050&q=80' %}

{# The replace the training-content class with one of the following, depending on the content: free-content, member-content, training-content #}
<div{{ attributes.addClass(['field__item','dp-content-card', access ]) }} 
    access="" 
    duration="" 
    image="{{ cardImg }}" 
    level="{{(node.field_difficulty.value ?? 'unclassified')|capitalize}}" 
    title="{{node.title.value}}" 
    modified="{{node.changed.value|date('Y-m-d')}}" 
    author=""
    uri="{{ node.path.value }}">
  <div class="img" style="background-image: url('{{ cardImg }}')">
    <dp-access-level>
        <i class="fa fa-usd"></i> Red Hat Training
    </dp-access-level>
  </div>
  <span class="dp-content-type certification-form">
      <i></i> {{node.type.entity.label}}
  </span>
  <div class="card-info">
    <dp-duration>
        <i></i> {{node.field_minutes_to_complete}}
    </dp-duration>
    <dp-level>
         {{(node.field_difficulty.value ?? 'unclassified')|capitalize}}
    </dp-level>
  </div>
  <h4>{{ node.title.value }}</h4>
  <p>{{ node.body.value|striptags }}</p>
  <span>
    <rh-datetime datetime="{{ node.created.value|date("c")}}">{{node.created.value|date("Y-m-d")}}</rh-datetime>
    <dp-author>{{node.author.value}}</dp-author>
  </span>
</div>